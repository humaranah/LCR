<Page x:Class="LCR.Views.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LCR.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Style="{StaticResource PageStyle}"
      Title="AboutPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource Heading}">"Left Center Right" (LCR) Challenge</TextBlock>
        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Style="{StaticResource TextParagraph}">
                    Created By: <Run FontWeight="Bold">Humberto Arana</Run>
                </TextBlock>
                <TextBlock Style="{StaticResource TextParagraph}">
                    This application was developed using .NET Core 3.1 and  Windows Presentation Foundation (WPF).
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
